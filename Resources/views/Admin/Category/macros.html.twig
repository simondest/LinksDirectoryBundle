{% trans_default_domain 'vertacoo_links_directory' %}

{% macro breadcrumb(path) %}

<ul class="breadcrumb">
	<li><a href="{{ path('vertacoo_links_directory_category_list') }}">{{ 'admin.category.list.title'|trans }}</a></li>
	{% if path is not empty %}
	{% for category in path %}
	{% if not loop.last %}
	<li><a href="{{ path('vertacoo_links_directory_category_list', {'parentId': category.id}) }}"> {{ category }}
	</a></li>
	{% else %}
	<li class="active">{{ category }}</li>
	{% endif %}
	{% endfor %}
	{% endif %}
</ul>

{% endmacro %}