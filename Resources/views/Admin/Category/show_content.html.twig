{% import 'VertacooLinksDirectoryBundle:Admin/Category:macros.html.twig' as macros %}

{% trans_default_domain 'vertacoo_links_directory' %}

<div class="page-header">
    <h1>{{ category }}</h1>
</div>  

{{ macros.breadcrumb(path) }}

<div class="well well-sm">
    <a href="{{ path('vertacoo_links_directory_category_edit', {'id': category.id}) }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-edit"></i> {{ 'admin.category.action.edit'|trans }}
    </a>
    <a href="{{ path('vertacoo_links_directory_category_delete', {'id': category.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i> {{ 'admin.category.action.delete'|trans }}
    </a>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        {{ 'admin.category.show.general_info'|trans }}
    </div>
        
    <table class="table table-bordered">
        <colgroup>
            <col width="25%" />
            <col width="75%" />
        </colgroup>     
        <tbody>
            <tr>
                <td>{{ 'admin.category.name'|trans }}</td>
                <td>{{ category.name }}</td>        
            </tr>  
            <tr>
                <td>{{ 'admin.category.permalink'|trans }}</td>
                <td>{{ category.permalink }}</td>        
            </tr>              
            <tr>
                <td>{{ 'admin.category.created_at'|trans }}</td>
                <td>{{ category.createdAt|date }}</td>
            </tr>  
            <tr>
                <td>{{ 'admin.category.updated_at'|trans }}</td>
                <td>{{ category.updatedAt|date }}</td>
            </tr>          
        </tbody>
    </table>
</div>